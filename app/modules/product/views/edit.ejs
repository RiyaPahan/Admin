<% layout(layout_directory+'/mainLayout') -%>
  <div class="kt-subheader   kt-grid__item" id="kt_subheader">
    <div class="kt-subheader__main">
      <h3 class="kt-subheader__title">
        <%= page_title %>
      </h3>
      <span class="kt-subheader__separator kt-subheader__separator--v"></span>
    </div>
  </div>

  <div class="kt-content  kt-grid__item kt-grid__item--fluid" id="kt_content">
    <div class="row">
      <div class="col-lg-12">
        <div class="kt-portlet">
          <form class="kt-form kt-form--label-right" id="frmFAQpro" action="<%= generateUrl('product.update') %>"
            method="POST" enctype='multipart/form-data'>
            <div class="kt-portlet__body">
            <div class="form-group row">
              <div class="col-lg-6">

                <label >Category</label>

                <select name="category" id="category"class="form-control " >

                  <option value="" selected disabled>choose category</option>

                  <% result.map(resu => {%>

 <option value="<%= resu._id%>" <% if (JSON.stringify(resu._id) == JSON.stringify(response.category)){ %> selected <% } %> ><%= resu.category%></option>

                    <% })%>

                </select>
              </div>

              <div class="col-lg-6">
                <label>SubCategory</label> 

                <select name="subcategory" id="subcategory"class="form-control" >

                   <option value="" selected disabled>choose sub category</option>

                <%   subcategory.map(val => {%>

<option value= "<%=val._id%>" <% if(JSON.stringify(val._id) == JSON.stringify(response.subcategory)){ %> selected <% } %> >
                  <%=val.subcategory%> </option>`);

            <% }) %>

                </select>
              </div>
            </div>
           
              <div class="form-group row">
                <div class="col-lg-6">
                  <label>Product Name</label>
           <input type="text" name="product" id="product" value="<%= response.product%>" class="form-control " 
                    placeholder="Enter product Name">
                </div>
                <div class="col-lg-6">
                  <label>Product Image</label>


                  <div class="col-lg-6">
                    
                  <img src="../../uploads/product/<%= response.image%>" alt="no-pic" height="100px" width="100px">
  
                  </div>




  <input type="file" name="image" id="image" value="" class="form-control required" />
                </div>
              </div>
             
             

            <div class="kt-portlet__foot">
              <div class="kt-form__actions">
                <div class="row">
                  <div class="col-lg-6">
                    <input type="hidden" id="subcat" value="<%= response.subcategory%>">
                    <input type="hidden" name="id" id="bid" value="<%= response._id%>">                    
                    <button type="submit"class="btn btn-primary">Save</button>
                    <a href="<%= generateUrl('product.list') %>" class="btn btn-secondary">Cancel</a>
                  </div>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>